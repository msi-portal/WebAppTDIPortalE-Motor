@{
    ViewBag.menu = "Report";
    ViewBag.Title = "Customer Order Reservation";
    ViewBag.submenu = "COReservation";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Order Date</th>
                                <th>Customer Number</th>
                                <th>Name</th>
                                <th>CO Number</th>
                                <th>CO Line</th>
                                <th>Item</th>
                                <th>UM</th>
                                <th>Qty RSVD Cov</th>
                                <th>Qty RSVD</th>
                                <th>Whse</th>
                                <th>Record Date</th>
                                <th>No. Rangka</th>
                                <th>No. Mesin</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Theme/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Theme/vendor/datatables/dataTables.dateTime.min.js"></script>

    <script src="~/Theme/vendor/jquery/jquery-ui.js"></script>

    <script type="text/javascript">
        function bindDatatable() {
            datatable = $('#dataTable')
                .DataTable({
                    "sAjaxSource": '@Url.Action("COR_GetData", "Report")',
                    "bServerSide": true,
                    "bProcessing": true,
                    "bSearchable": true,
                    "language": {
                        "emptyTable": "No record found.",
                        "processing":
                            '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                    },
                    "columns": [
                        {
                            "data": "order_date",
                            "autoWidth": true,
                            "searchable": true,
                            "render": function (value) {
                                if (value === null) return "";

                                var pattern = /Date\(([^)]+)\)/;
                                var results = pattern.exec(value);
                                var dt = new Date(parseFloat(results[1]));

                                return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                            },
                        },
                        {
                            "data": "cust_num",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "name",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "ref_num",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "ref_line",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "item",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "u_m",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "qty_rsvd_conv",
                            "autoWidth": true,
                            "searchable": true
                        }, {
                            "data": "qty_rsvd",
                            "autoWidth": true,
                            "searchable": true,
                        }, {
                            "data": "whse",
                            "autoWidth": true,
                            "searchable": true,
                        }, {
                            "data": "RecordDate",
                            "autoWidth": true,
                            "searchable": true,
                            "render": function (value) {
                                if (value === null) return "";

                                var pattern = /Date\(([^)]+)\)/;
                                var results = pattern.exec(value);
                                var dt = new Date(parseFloat(results[1]));

                                return (dt.getMonth() + 1) + "/" + dt.getDate() + "/" + dt.getFullYear();
                            },
                        }, {
                            "data": "No_Rangka",
                            "autoWidth": true,
                            "searchable": true,
                        }, {
                            "data": "No_Mesin",
                            "autoWidth": true,
                            "searchable": true,
                        },
                    ],

                });
        }
        $(document).ready(function () {
            bindDatatable();
        });
    </script>
}
