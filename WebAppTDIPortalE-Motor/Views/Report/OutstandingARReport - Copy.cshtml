                        },
                    ],
                    "columnDefs": [
                        {
                            searchPanes: {
                                options: [
                                    {
                                        label: 'Lunas',
                                        value: function (rowData, rowIdx) {
                                            return rowData[6] = 0;
                                        }
                                    },
                                    {
                                        label: 'Outstanding',
